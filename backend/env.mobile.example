# Mobile API Configuration
# Copy this to your .env file and update with your values

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost/linkuup_db
# or for SQLite (development)
# DATABASE_URL=sqlite:////path/to/database.db

# Security
SECRET_KEY=your-secret-key-here
MOBILE_API_KEY=your-mobile-api-key-here

# Token Configuration
ACCESS_TOKEN_EXPIRY=3600  # 1 hour in seconds
REFRESH_TOKEN_EXPIRY=2592000  # 30 days in seconds

# Rate Limiting
RATE_LIMIT_PER_HOUR=1000
REDIS_URL=memory://  # Use redis://localhost:6379 for production with Redis

# Image Optimization
IMAGE_CACHE_DIR=/path/to/image/cache
MAX_CONTENT_LENGTH=20971520  # 20MB in bytes

# Email Configuration (for booking notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# CORS Configuration
CORS_ORIGINS=*  # Use specific origins in production

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True

