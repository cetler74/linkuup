# Production Environment Configuration for BioSearch2
# Digital Ocean Droplet Deployment

# Database Configuration
DATABASE_URL=postgresql://biosearch_user:CHANGE_THIS_PASSWORD@localhost:5432/biosearch_db

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=CHANGE_THIS_TO_A_VERY_SECURE_RANDOM_STRING

# Email Configuration (Gmail SMTP)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_gmail_app_password
MAIL_DEFAULT_SENDER=your_email@gmail.com

# CORS Configuration (for production)
CORS_ORIGIN=https://your-domain.com,https://www.your-domain.com

# Application Configuration
APP_HOST=0.0.0.0
APP_PORT=5001

# Security Configuration
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/biosearch/app.log

# Performance Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB max file upload
UPLOAD_FOLDER=/home/biosearch/BioSearch2/uploads

# Backup Configuration
BACKUP_DIR=/home/biosearch/backups
BACKUP_RETENTION_DAYS=30
